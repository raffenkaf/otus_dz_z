{% extends 'layout.twig' %}

{% block content %}
    <div class="register">
        <form action="/user/login" method="post">
            <div>
                <label for="login">Логин:</label>
                <input type="text" name="login">
                {% if has_error('login') %}<p>{{ error('login') }}</p>{% endif %}
            </div>
            <div>
                <label for="password">Пароль:</label>
                <input type="password" name="password">
                {% if has_error('password') %}<p>{{ error('password') }}</p>{% endif %}
            </div>
            <div>
                <p><button type="submit">Логин</button></p>
            </div>
        </form>
    </div>
    <style>
        div.register {
            text-align: center;
        }
        div.register form div {
            min-height: 40px;
            width: 50%;
            margin: auto;
        }

        div.register form div label {
            min-width: 140px;
        }

        div.register form div input {
            min-width: 250px;
        }

        div.register form div select {
            min-width: 250px;
        }

        div.register form div textarea {
            min-width: 250px;
        }
    </style>
{% endblock %}